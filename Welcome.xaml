<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VersionAlert.Welcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VersionAlert"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="欢迎使用 VersionAlert!" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               FontSize="24" 
               Foreground="Black"/>
            <TextBlock Text="请将MentalOmega本体放入本EXE文件夹下的packages中" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               FontSize="24" 
               Foreground="Black"/>
            <TextBlock Text="附加包解压进packages中" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               FontSize="24" 
               Foreground="Black"/>
            <TextBlock Text="选择要装载的包，调整顺序" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               FontSize="24" 
               Foreground="Black"/>
            <TextBlock Text="然后初始化游戏，选择游戏进程，打开游戏" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               FontSize="24" 
               Foreground="Black"/>
            <TextBlock Text="当前运行目录为"
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               FontSize="24" 
               Foreground="Black"/>
            <TextBlock  x:Name="exePathTextBlock"
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               FontSize="24" 
               Foreground="Black"/>
        </StackPanel>
    </Grid>
</Page>
